@model EntertainmentGuildStore.Models.Order

@{
    Layout = "_ProfileLayout";
    ViewData["Title"] = "Order Details";
}

<h3 class="mb-3">🧾 Order #@Model.Id Details</h3>
<hr />
<div><strong>Date:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</div>
<div><strong>Status:</strong> @Model.Status</div>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Qty</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>$@item.Price</td>
                <td>@item.Quantity</td>
                <td>$@(item.Price* item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>

<p class="fw-bold mt-3">Tax (8%): $@((Model.OrderItems.Sum(i => i.Price * i.Quantity) * 0.08m).ToString("0.00"))</p>
<p class="fw-bold">Total: $@Model.TotalAmount.ToString("0.00")</p>

<div class="mt-4 d-flex gap-3">
    <form asp-action="Reorder" asp-controller="Order" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button class="btn btn-success"> Reorder</button>
    </form>

    <a asp-action="Index" asp-controller="Order" class="btn btn-secondary"> Back</a>
</div>
