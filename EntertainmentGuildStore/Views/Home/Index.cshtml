@model List<EntertainmentGuildStore.Models.Item>

@{
    ViewData["Title"] = "Homepage";
}

<h2 class="text-center mb-4">🔥Hot products</h2>

<style>
    .carousel-img {
        width: 100%;
        height: auto;
        max-height: 700px;
        object-fit: contain;
        transition: transform 0.3s ease;
    }

    .carousel-img:hover {
        transform: scale(1.03);
    }
</style>

<div id="carouselExampleIndicators" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/carousel_1.png" class="d-block w-100 carousel-img" alt="Slide 1">
        </div>
        <div class="carousel-item">
            <img src="~/images/carousel_2.png" class="d-block w-100 carousel-img" alt="Slide 2">
        </div>
        <div class="carousel-item">
            <img src="~/images/carousel_3.png" class="d-block w-100 carousel-img" alt="Slide 3">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<hr class="my-5">

<div class="row">
    <!-- ❤️ Guess You Like -->
    <div class="col-md-3 mb-4 d-flex">
        <div class="card w-100 text-center" style="background-color: #FFA500; color: white;">
            <div class="card-body d-flex flex-column justify-content-center">
                <h4 class="fw-bold">💖 Guess You Like</h4>
                <p>More recommended products</p>
                <a class="btn btn-light mt-2" href="#">Explore Now</a>
            </div>
        </div>
    </div>
   
    <div class="col-md-9">
        <div class="d-flex justify-content-around mb-4">
            <button class="btn btn-outline-primary">Category 1</button>
            <button class="btn btn-outline-primary">Category 2</button>
            <button class="btn btn-outline-primary">Category 3</button>
        </div>

        <div class="row">
            @foreach (var item in Model.Take(3)) 
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="text-danger fw-bold">$@item.Price</p>
                            <a href="@Url.Action("Details", "Item", new { id = item.Id })" class="btn btn-sm btn-primary">View</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
