@model List<EntertainmentGuildStore.Models.Item>

@{
    ViewData["Title"] = "Homepage";
}

<h2 class="text-center mb-4">🔥Hot products</h2>

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        @for (int i = 0; i < Model.Count; i++)
        {
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="true" aria-label="Slide @(i + 1)"></button>
        }
    </div>
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <div class="d-flex justify-content-center align-items-center flex-column p-5" style="background-color:#ff4d4f; height: 400px; color: white; border-radius: 12px;">
                    <h3>@item.Name</h3>
                    <p>@item.Description</p>
                    <h4>$@item.Price</h4>
                    <a class="btn btn-light mt-3" href="@Url.Action("Details", "Item", new { id = item.Id })">Check Details</a>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Last</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<hr class="my-5">

<div class="row">
<!-- ❤️ Guess You Like -->
    <div class="col-md-3 mb-4 d-flex">
        <div class="card w-100 text-center" style="background-color: #FFA500; color: white;">
            <div class="card-body d-flex flex-column justify-content-center">
                <h4 class="fw-bold">💖 Guess You Like</h4>
                <p>More recommended products</p>
                <a class="btn btn-light mt-2" href="#">Explore Now</a>
            </div>
        </div>
    </div>
   
    <div class="col-md-9">
        <div class="d-flex justify-content-around mb-4">
            <button class="btn btn-outline-primary">Category 1</button>
            <button class="btn btn-outline-primary">Category 2</button>
            <button class="btn btn-outline-primary">Category 3</button>
        </div>

        <div class="row">
            @foreach (var item in Model.Take(3)) 
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="text-danger fw-bold">$@item.Price</p>
                            <a href="@Url.Action("Details", "Item", new { id = item.Id })" class="btn btn-sm btn-primary">View</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
