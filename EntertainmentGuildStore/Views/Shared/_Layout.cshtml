@{
    var showNav = !Context.Request.Path.StartsWithSegments("/Account/Register")
               && !Context.Request.Path.StartsWithSegments("/Account/RegisterConfirmation")
               && !Context.Request.Path.StartsWithSegments("/Account/Login");

    var isCartPage = Context.Request.Path.StartsWithSegments("/Cart");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EntertainmentGuildStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EntertainmentGuildStore.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid px-0">

        @if (showNav)
        {
            <header class="bg-white shadow-sm py-3 px-4 mb-3 border-bottom">
                <div class="d-flex justify-content-between align-items-center flex-wrap">
             
                    <div class="fw-bold text-danger fs-4 mb-2 mb-md-0">
                        <a asp-controller="Store" asp-action="Index" class="text-decoration-none text-danger">
                            🎮 EntertainmentGuildStore
                        </a>
                    </div>

                    <!-- Search -->
                    <form asp-controller="Store" asp-action="Search" method="get" class="d-flex flex-grow-1 mx-4" style="max-width: 500px;">
                        <input class="form-control me-2" type="search" name="query" placeholder="Search products..." aria-label="Search">
                        <button class="btn btn-outline-danger" type="submit">Search</button>
                    </form>

                    <!-- Right-side icons -->
                    <div class="d-flex align-items-center flex-shrink-0">
                        @if (!isCartPage)
                        {
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-dark btn-sm me-3">🛒 Cart</a>
                        }
                        @if (!Context.Request.Path.StartsWithSegments("/Profile"))
                        {
                            <a href="/Profile" class="btn btn-outline-dark btn-sm me-3">🙍‍ Profile</a>
                        }
                    </div>

                </div>
            </header>
        }

        <main role="main" class="container pb-3">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted mt-4">
            <div class="container">
                &copy; 2025 - EntertainmentGuildStore -
                <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
