@model EntertainmentGuildStore.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    var selectedRole = ViewBag.SelectedRole as string ?? "";
}

<div class="text-center mt-5">
    <h2>Please Register</h2>
    <p class="mt-3">Already have an account? <a href="@Url.Action("Login", "Account")">Click here to Login</a></p>
</div>

@if (string.IsNullOrEmpty(selectedRole))
{
    <hr />
    <div class="text-center mt-4">
        <p>Select your registration role:</p>
        <div class="d-flex justify-content-center gap-3">
            <a class="btn btn-outline-primary" href="@Url.Action("Register", "Account", new { role = "Customer" })">Register as Customer</a>
            <a class="btn btn-outline-success" href="@Url.Action("Register", "Account", new { role = "Employee" })">Register as Employee</a>
            <a class="btn btn-outline-danger" href="@Url.Action("Register", "Account", new { role = "Admin" })">Register as Admin</a>
        </div>
    </div>
}
else
{
    <hr />
    <h4 class="text-center mb-4">Registering as: <span class="text-info">@selectedRole</span></h4>

    <form asp-action="Register" method="post">
        <input type="hidden" name="Role" value="@selectedRole" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Full Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter your name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email Address</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        @if (selectedRole == "Admin")
        {
            <div class="mb-3">
                <label asp-for="StaffId" class="form-label">Staff ID</label>
                <input asp-for="StaffId" class="form-control" placeholder="Admin Staff ID starts with 1" />
                <span asp-validation-for="StaffId" class="text-danger"></span>
            </div>
        }
        else if (selectedRole == "Employee")
        {
            <div class="mb-3">
                <label asp-for="StaffId" class="form-label">Staff ID</label>
                <input asp-for="StaffId" class="form-control" placeholder="Employee Staff ID starts with 3" />
                <span asp-validation-for="StaffId" class="text-danger"></span>
            </div>
        }

        <button type="submit" class="btn btn-success w-100">Submit Registration</button>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
