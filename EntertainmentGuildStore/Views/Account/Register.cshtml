@model EntertainmentGuildStore.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    var selectedRole = ViewBag.SelectedRole as string ?? "";
}

@if (string.IsNullOrEmpty(selectedRole))
{
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
        }

        .register-page {
            display: flex;
            height: 100vh;
            width: 100vw;
        }

        .login-link {
            position: absolute;
            top: 20px;
            right: 30px;
            font-size: 16px;
        }

            .login-link a {
                text-decoration: none;
                font-weight: bold;
            }

        .left-image {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #fff;
        }

            .left-image img {
                max-width: 100%;
                max-height: 100%;
                object-fit: contain;
            }

        .right-content {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: white;
        }

        .right-box {
            background-color: white;
            padding: 50px;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
            text-align: center;
            min-width: 400px;
        }

            .right-box h2 {
                color: #e53935;
                font-weight: 700;
                font-size: 28px;
                margin-bottom: 30px;
            }

            .right-box a.btn {
                background-color: #e53935;
                color: white;
                font-weight: bold;
                padding: 14px 28px;
                font-size: 16px;
            }

                .right-box a.btn:hover {
                    background-color: #b71c1c;
                    color: white;
                }
    </style>

    <div class="register-page">
        <div class="login-link">
            Already have an account?
            <a href="@Url.Action("Login", "Account")">Login</a>
        </div>

        <div class="left-image">
            <img src="/images/background_register.png" alt="Register Background" />
        </div>

        <div class="right-content">
            <div class="right-box">
                <h2>Welcome to<br />EntertainmentGuildStore</h2>
                <a class="btn btn-lg" href="@Url.Action("Register", "Account", new { role = "Customer" })">Click Here to Register</a>
            </div>
        </div>
    </div>
}
else if (selectedRole == "Customer")
{
    <div class="container mt-5">
        <p class="text-end">
            Already have an account?
            <a href="@Url.Action("Login", "Account")" class="text-decoration-none">Login</a>
        </p>
        <hr />

        <h3 class="text-center mb-4">Registering as Customer</h3>

        <form asp-action="Register" method="post">
            <input type="hidden" name="Role" value="@selectedRole" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Full Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">Submit Registration</button>
        </form>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
