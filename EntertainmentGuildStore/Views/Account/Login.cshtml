@{
    Layout = "_SimpleLayout";
}

@model EntertainmentGuildStore.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center mt-4">Login to Your Account</h2>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        @if (ViewBag.LoginError != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.LoginError</div>
        }

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Enter your password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-danger w-100">Login</button>
        </form>

        <p class="text-center mt-4">
            Don’t have an account?
            <a class="text-danger fw-bold text-decoration-none" href="@Url.Action("Register", "Account", new { role = "Customer" })">Register</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
