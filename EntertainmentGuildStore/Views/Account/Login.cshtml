@model EntertainmentGuildStore.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="text-center mt-5">
    <h2>Welcome Back! Please Login</h2>
    <p class="mt-3">Don't have an account? <a href="@Url.Action("Register", "Account")">Click here to Register</a></p>
</div>

<hr />

@if (ViewBag.LoginError != null)
{
    <div class="alert alert-danger text-center">
        @ViewBag.LoginError
    </div>
}

<form asp-action="Login" method="post" class="mt-4">
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control" placeholder="Enter your password" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success w-100">Login</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
