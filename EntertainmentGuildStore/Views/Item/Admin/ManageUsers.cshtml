@model List<EntertainmentGuildStore.Models.User>

@{
    Layout = "_SimpleLayout";
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <h2 class="text-center mb-4"> Manage Users</h2>

    <div class="text-end mb-3">
        <a asp-action="Index" asp-controller="Item" class="btn btn-secondary me-2">Manage Products</a>
        <a asp-action="AddUser" class="btn btn-success me-2">➕ Add Customer</a>
        <a asp-action="CreateAdmin" class="btn btn-primary">➕ Add Admin</a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">No users registered yet.</div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Are you sure you want to delete this user?');">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<a asp-action="Logout" asp-controller="Account"
   class="btn btn-danger position-fixed"
   style="bottom: 20px; right: 20px; z-index: 1000;">Logout</a>
