@model List<EntertainmentGuildStore.Models.Item>

@{
    ViewData["Title"] = "Homepage";
}

<!-- 🔥 Hot Products Title -->
<h2 class="text-center my-4">🔥 Hot Products</h2>

<!--  Carousel -->
<div class="container px-0" style="max-width: 100%;">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/carousel_1.png" class="d-block w-100" style="height: auto; aspect-ratio: 2.4 / 1; object-fit: cover;" />
            </div>
            <div class="carousel-item">
                <img src="/images/carousel_2.png" class="d-block w-100" style="height: auto; aspect-ratio: 2.4 / 1; object-fit: cover;" />
            </div>
            <div class="carousel-item">
                <img src="/images/carousel_3.png" class="d-block w-100" style="height: auto; aspect-ratio: 2.4 / 1; object-fit: cover;" />
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>

<hr class="my-5" />


<div class="container">
    <div class="d-flex flex-wrap justify-content-center gap-2 mb-4">
        <button class="btn btn-outline-primary">Games</button>
        <button class="btn btn-outline-primary">Anime Figures</button>
        <button class="btn btn-outline-primary">Peripherals</button>
        <button class="btn btn-outline-primary">Collectibles</button>
        <button class="btn btn-outline-primary">Console Hardware</button>
        <button class="btn btn-outline-primary">Card Games</button>
        <button class="btn btn-outline-primary">Plush Toys</button>
        <button class="btn btn-outline-primary">Merchandise</button>
        <button class="btn btn-outline-primary">Pre-Owned Deals</button>
    </div>

    <div class="row">
        <!-- ❤️ Guess You Like -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 text-center" style="background-color: #FFA500; color: white;">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h4 class="fw-bold">💖 Guess You Like</h4>
                    <p>More recommended products</p>
                    <a class="btn btn-light mt-2" href="#">Explore Now</a>
                </div>
            </div>
        </div>

        <!-- Product Cards -->
        <div class="col-md-9">
            <div class="row">
                @foreach (var item in Model.Take(3))
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm text-center d-flex flex-column align-items-center p-3">


                            @if (item.MainImage != null && item.MainImage.Length > 0)
                            {
                                <img src="data:image/png;base64,@Convert.ToBase64String(item.MainImage)"
                                     class="img-fluid mb-3"
                                     alt="@item.Name"
                                     style="max-height: 200px; object-fit: contain;" />
                            }
                            else
                            {
                                <div class="bg-light text-muted d-flex align-items-center justify-content-center mb-3"
                                     style="height: 200px; width: 100%; border: 1px dashed #ccc;">
                                    No image
                                </div>
                            }

                     
                            <h5 class="fw-bold">@item.Name</h5>
                            <p class="text-muted small">@item.Description</p>
                            <p class="text-danger fw-bold fs-5">$@item.Price</p>

            
                            <a href="@Url.Action("Details", "Store", new { id = item.Id })"
                               class="btn btn-primary w-100 mt-auto">View</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
