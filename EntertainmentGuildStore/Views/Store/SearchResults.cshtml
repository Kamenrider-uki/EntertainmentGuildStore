@model List<EntertainmentGuildStore.Models.Item>

@{
    ViewData["Title"] = "Search Results";
}

<h2>Search Results for "@ViewBag.SearchQuery"</h2>

@if (!Model.Any())
{
    <p>No products found matching your search.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (item.MainImage != null)
                    {
                        <img src="data:image/png;base64,@Convert.ToBase64String(item.MainImage)"
                             class="card-img-top"
                             alt="@item.Name"
                             style="height: 200px; object-fit: cover;" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">$@item.Price</p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
