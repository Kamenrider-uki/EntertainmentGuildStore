@model List<EntertainmentGuildStore.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
    decimal subtotal = Model.Sum(cart => (cart.Item?.Price ?? 0) * cart.Quantity);
    decimal tax = Math.Round(subtotal * 0.08M, 2); // 8% tax
    decimal total = subtotal + tax;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h3 class="mb-4">🛒 Your Cart (@Model.Count item(s))</h3>

            @if (!Model.Any())
            {
                <p>Your cart is empty.</p>
            }
            else
            {
                @foreach (var cart in Model)
                {
                    <div class="d-flex align-items-center mb-4 p-3 border rounded">
                        <div style="width: 100px;">
                            @if (cart.Item?.MainImage != null)
                            {
                                <img src="data:image/png;base64,@Convert.ToBase64String(cart.Item.MainImage)"
                                     class="img-fluid rounded" />
                            }
                            else
                            {
                                <img src="/images/no-image.png" class="img-fluid rounded" />
                            }
                        </div>
                        <div class="ms-3 flex-grow-1">
                            <h5>@cart.Item?.Name</h5>
                            <p class="text-muted">Price: $@(cart.Item?.Price ?? 0)</p>

                            <div class="d-flex align-items-center">
                                <span class="me-2">Qty:</span>
                                <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@cart.ItemId" />
                                    <input type="number" name="quantity" value="@cart.Quantity"
                                           class="form-control d-inline" style="width:80px;" min="1"
                                           onchange="this.form.submit();" />
                                </form>
                                <a asp-action="Remove" asp-route-id="@cart.ItemId"
                                   class="btn btn-outline-danger btn-sm ms-3">
                                    Remove
                                </a>
                            </div>
                        </div>
                        <div class="text-end">
                            <strong>$@((cart.Item?.Price ?? 0) * cart.Quantity)</strong>
                        </div>
                    </div>
                }
            }
        </div>

        <div class="col-md-4">
            <div class="border p-3 rounded">
                <h4>Order Summary</h4>
                <hr />
                <p>Subtotal (@Model.Count item(s)): <span class="float-end">$@subtotal</span></p>
                <p>Estimated Tax: <span class="float-end">$@tax</span></p>
                <hr />
                <h5>Total: <span class="float-end" style="color:red;">$@total</span></h5>
                <div class="text-end mt-4">
                    <a asp-action="Checkout" class="btn btn-danger w-100 mb-2">Proceed to Checkout</a>
                </div>

                <a asp-action="Clear" class="btn btn-outline-secondary w-100 mt-2">Clear Cart</a>
            </div>
        </div>
    </div>
</div>
