@using EntertainmentGuildStore.Models
@model List<CartItem>

@{
    ViewData["Title"] = "Your Shopping Cart";
}

<h2 class="text-center mt-4 mb-4">Your Shopping Cart</h2>

@if (Model == null || !Model.Any())
{
    <div class="text-center">
        <p>Your cart is empty.</p>
        <a href="@Url.Action("Index", "Item")" class="btn btn-outline-primary">Go Shopping</a>
    </div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Item</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ImageUrl" alt="@item.Name" style="height: 80px;" /></td>
                    <td>@item.Name</td>
                    <td>$@item.Price</td>
                    <td>
                        <form asp-action="UpdateQuantity" asp-controller="Cart" method="post" class="d-flex">
                            <input type="hidden" name="id" value="@item.ItemId" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control form-control-sm me-2" style="width:80px;" />
                            <button type="submit" class="btn btn-sm btn-secondary">Update</button>
                        </form>
                    </td>
                    <td>$@(item.Price* item.Quantity)</td>
                    <td>
                        <form asp-action="Remove" asp-controller="Cart" method="post">
                            <input type="hidden" name="id" value="@item.ItemId" />
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <h4>
            Subtotal: $@Model.Sum(i => i.Price * i.Quantity)
        </h4>
        <a href="#" class="btn btn-success">Proceed to Checkout</a>
    </div>
}
